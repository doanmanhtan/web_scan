# Application Config
PORT=3001
NODE_ENV=development
API_PREFIX=/api

# Database Config
DB_HOST=localhost
DB_PORT=27017
DB_NAME=source_scanner
DB_USER=admin
DB_PASS=admin_password

# JWT Config
JWT_SECRET=your_jwt_secret
JWT_EXPIRES_IN=1d

# Scanner Tools
SEMGREP_PATH=/usr/local/bin/semgrep
SNYK_PATH=/usr/bin/snyk
CLANGTIDY_PATH=/usr/bin/clang-tidy

# Storage
UPLOAD_DIR=./uploads
SCAN_RESULTS_DIR=./scans
REPORTS_DIR=./reports

# Logging
LOG_LEVEL=info
